{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@constants": ["src/constants"],
            "@constants/*": ["src/constants/*"],
            "@controllers": ["src/controllers"],
            "@controllers/*": ["src/controllers/*"],
            "@database": ["src/database"],
            "@database/*": ["src/database/*"],
            "@middlewares": ["src/middlewares"],
            "@middlewares/*": ["src/middlewares/*"],
            "@routes": ["src/routes"],
            "@routes/*": ["src/routes/*"],
            "@types": ["src/types"],
            "@types/*": ["src/types/*"],
            "@utils": ["src/utils"],
            "@utils/*": ["src/utils/*"],
            "@validations": ["src/validations"],
            "@validations/*": ["src/validations/*"]
        }
    }
}
